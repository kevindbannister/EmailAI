DATABASE_URL=postgres://user:password@localhost:5432/emailai
DATABASE_SSL=false

# 32-byte encryption key for OAuth tokens (base64 or raw string)
APP_ENCRYPTION_KEY=replace_with_32_byte_key

# Microsoft OAuth (existing integration)
MICROSOFT_CLIENT_ID=replace_with_microsoft_client_id
MICROSOFT_CLIENT_SECRET=replace_with_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:4000/auth/microsoft/callback
MICROSOFT_POST_AUTH_REDIRECT=/settings?tab=integrations

# Google OAuth (Gmail integration)
GOOGLE_CLIENT_ID=replace_with_google_client_id
GOOGLE_CLIENT_SECRET=replace_with_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback
GOOGLE_POST_AUTH_REDIRECT=/settings/integrations?connected=google
